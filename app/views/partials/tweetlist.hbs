<section class="ui raised segment">
  <div class="ui two column center aligned middle aligned grid segment">
    <div class="column">
      <img src="images/timeline.jpg" class="ui centered medium image">
    </div>
    <div class="column">
      <table class="ui very basic table">
        <thead>
          <tr>
            <th> Tweet </th>
            <th width="200"> Tweeter </th>
          </tr>
        </thead>
        <tbody>
        {{#each tweets}}
          <tr>
            <td> {{tweet}}
              <div class="metadata">
                <div class="date"><i class="wait icon"></i>{{date}}</div>
              </div>
            </td>
            <td> {{tweeter.firstName }} {{tweeter.lastName}} </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>