<section class="ui raised segment">
  <div class="ui two column center aligned middle aligned grid segment">
    <div class="column">
      <h1 align="center">My Timeline</h1>
      <img src="images/my-timeline.png" class="ui centered medium image">
    </div>
    <div class="column">
      <table class="ui very basic table">
        <thead>
        <tr>
          <th> Tweet </th>
          <th width="100"> Delete </th>
        </tr>
        </thead>
        <tbody>
        {{#each tweets}}
          <tr>
            <td>
              <div class="content" style="font-size:18px">
                <b>{{tweet}}</b>
              </div>
                {{#if picture.data}}
                <div class="image">
                  <img src="/getPicture/{{id}}" height="150" width="150" />
                </div>
                {{/if}}
                <br>
              <div class="metadata" style="color:grey">
                <div class="date">
                  <i class="wait icon"></i>{{date}}
                </div>
              </div>
            </td>
            <td> <a href="/deletetweet/{{_id}}"><i class="large red trash icon"></i></a></td>
          </tr>
        {{/each}}
        </tbody>
        <tfoot>
        <tr>
          <td colspan="2">
            <a href="/deletealltweets">
              <button class="ui tiny red right floated button">Delete All Tweets</button>
            </a>
          </td>
        </tr>
        </tfoot>
      </table>
    </div>
  </div>
</section>