<section class="ui raised segment">
  <div class="ui two column center aligned middle aligned grid segment">
    <div class="column">
      <table class="ui very basic table">
        <thead>
        <tr>
          <th> Tweets </th>
          <th width="100"> Delete </th>
        </tr>
        </thead>
        <tbody>
        {{#each tweets}}
          <tr>
            <td>
              <div class="content" style="font-size:18px">
                <b>{{tweet}}</b>
              </div>
              {{#if picture.data}}
                <div class="image">
                  <img src="/getPicture/{{id}}" height="150" width="150" />
                </div>
              {{/if}}
              <br>
              <div class="metadata" style="color:grey">
                <i class="user icon"></i>{{tweeter.firstName}} {{tweeter.lastName}}
                <div class="date"><i class="wait icon"></i>{{date}}</div>
              </div>
            </td>
            <td> <a href="/admindeletetweet/{{id}}"><i class="large red trash icon"></i></a> </td>
          </tr>
        {{/each}}
        </tbody>
        <tfoot>
        <tr>
          <td colspan="3">
            <a href="/admindeletealltweets/{{id}}">
              <button class="ui tiny red right floated button">Delete All Tweets</button>
            </a>
          </td>
        </tr>
        </tfoot>
      </table>
    </div>
  </div>
</section>